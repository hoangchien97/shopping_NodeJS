<% include ../partials/header.ejs %>
<div class="forms-inner">
    <!--/set-3-->
    <div class="set-3">
        <div class="graph-2 general">
            <h3 class="inner-tittle two" style="margin-left:40px;">Sửa thể loại </h3>
            <% include ../error/alert.ejs %>
            <div class="grid-1">
                <form action="" class="form-horizontal" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-md-2 control-label">Tên thể loại</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope-o"></i>
                                </span>
                                <input type="text" class="form-control1 icon" name="txtName" value="<%= data.name%>">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-n">
                        <label class="col-md-2 control-label form-group2 group-mail">Thể loại cha</label>
                        <div class="col-md-8 form-group2 group-mail">
                            <select name="sltCategory">
                                <option value="" >---> Chọn thể loại cha <---</option>
                                <option value="0" <%= (data.parentId == 1) ? "selected" : ""; %>> Nam</option>
                                <option value="1" <%= (data.parentId == 2) ? "selected" : ""; %>> Nữ</option>
                            </select>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                    
                    <button type="submit" class="btn btn-primary">Sửa</button>
                </form>
            </div>
        </div>
    </div>
    <!--//set-3-->
</div>

<% include ../partials/footer.ejs %>
