<% include ../partials/header.ejs %>
<div class="forms-inner">
    <!--/set-3-->
    <div class="set-3">
        <div class="graph-2 general">
            <h3 class="inner-tittle two" style="margin-left:40px;">Thêm sản phẩm </h3>
            <div class="grid-1">
                <form action="" class="form-horizontal" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-md-2 control-label">Tên sản phẩm</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope-o"></i>
                                </span>
                                <input type="text" class="form-control1 icon" name="txtName" placeholder="Email Address">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Ảnh</label>
                        <div class="col-md-3">
                            <div class="input-group">
                                <div class="input-group-addon"><input type="file" name="fileImg"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Chi tiết sản phẩm</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <div class="form-group">
                                  <label for=""></label>
                                  <textarea class="form-control" name="txtDescription" id="" rows="3"style="margin-left:18px;width:705px"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Size</label>
                        <div class="col-md-3 form-group2 group-mail">
                            <select name="sltSize">
                                <option value="">---> Chọn size <---</option>
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                                <option value="XL">XL</option>
                            </select>
                        </div>
                        <label class="col-md-2 control-label">Số lượng</label>
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope-o"></i>
                                </span>
                                <input type="text" class="form-control1 icon" name="txtQuantity" placeholder="Số lượng">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Giá</label>
                        <div class="col-md-3">
                            <div class="input-group input-icon right">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope-o"></i>
                                </span>
                                <input id="text" class="form-control1 icon" type="text" name="txtPrice" placeholder="Giá">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-n">
                        <label class="col-md-2 control-label form-group2 group-mail">Thể loại</label>
                        <div class="col-md-8 form-group2 group-mail">
                            <select name="sltCategory">
                                <option value="">---> Chọn thể loại <---</option>
                                <option value="1">Áo Sơ mi</option>
                                <option value="">Quần</option>
                                <option value="">Váy</option>
                            </select>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
<!--                     
                    <div class="buttons-ui">
                        <a class="btn blue" style="margin-bottom:30px">Thêm sản phẩm</a>
                    </div> -->
                    <button type="submit" class="btn btn-primary" style="margin-bottom:30px;margin-left: 100px">Thêm sản phẩm</button>
                </form>
            </div>
        </div>
    </div>
    <!--//set-3-->
</div>

<% include ../partials/footer.ejs %>
